.btns-box{
  position: absolute;
  bottom: 100rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  z-index: 9999;
}
.btns-box cover-image{
  width: 100rpx;
  height: 100rpx;
}
.reChoose{
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
}
.faceinfo{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: 350rpx;
  background-color: rgba(255, 255, 255, .5);
  border-radius: 5px;
  box-shadow: 0 3px 10px white;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}

.row{
  display: flex;
  justify-content: space-around;
}